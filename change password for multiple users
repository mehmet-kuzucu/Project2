#include <stdio.h>
#include <string.h>
void enterpassword();
void changePassword();
\\ here we use the voıd funtıon twıce one for the loggıng ın and the second for changıng the password, 
we use ınt to store the value which is the existing password of the user\\
int password1= 2021;
int password2= 2022;
int password3= 2023;
int password4= 2024;

int main(void)
{
enterpassword();
}

void enterpassword()
{
\\ users will log in and and acces will be granted and  if the the password is incorrect it will be denied 
and the process will start it self over through a loop \\  
    int user1;
    int user2;
    int user3;
    int user4;
    printf("What is the password1?: ");
    scanf("%d", &user1);
    printf("What is the password2?: ");
    scanf("%d", &user2);
    printf("What is the password3?: ");
    scanf("%d", &user3);
    printf("What is the password4?: ");
    scanf("%d", &user4);
    
    while(1)
    {
    \\ we use the if statment to show the respective passwords for the repective users\\
    if (user1,user2,user3,user4 == password1,password2,password3,password4)
        {
        printf("\nAcces granted\n");
        changePassword();
        break;
        }
        \\ else statment so if the password is incorrect the access will be denied\\
    else
        {
        printf("\nAcces denied\n");
        printf("What is the password?:");
        scanf("%d", &user1);
        printf("What is the password?:");
        scanf("%d", &user2);
        printf("What is the password?:");
        scanf("%d", &user3);
        printf("What is the password?:");
        scanf("%d", &user4);
        }
    }
}

void changePassword() 
{
\\ we declare the password change and and when each user is ask\printf they enter\scanf in the new password once new password enterd the program must allow the user to 
successfully change his pasword\\
    int newpassword1;
    int newpassword2;
    int newpassword3;
    int newpassword4;
    printf("\nEnter new newpassword1: ");
    scanf("%d", &newpassword1);
    printf("\nEnter new password2: ");
    scanf("%d", &newpassword2);
    printf("\nEnter new password3: ");
    scanf("%d", &newpassword3);
    printf("\nEnter new password4: ");
    scanf("%d", &newpassword4);
    
    password1= newpassword1;
    printf("\nThe new password is: %d\n", password1);
    password2= newpassword2;
    printf("\nThe new password is: %d\n", password2);
    password3= newpassword3;
    printf("\nThe new password is: %d\n", password3);
    password4= newpassword4;
    printf("\nThe new password is: %d\n", password4);
    
   printf("%s \n\n", "PASSWORD CHANGED!!");  

    }



